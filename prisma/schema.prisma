generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario       Int              @id @default(autoincrement())
  nombre           String
  apellidos        String
  identificacion   String
  email            String
  rol              String
  cuerda           String
  color            String
  sexo             String
  estatura         Int
  fecha_nacimiento DateTime
  foto             Bytes?
  id_codigo_act    Int
  codigoActivacion CodigoActivacion @relation(fields: [id_codigo_act], references: [id_codigo_act])

  @@unique([id_usuario, id_codigo_act])
}

model CodigoActivacion {
  id_codigo_act  Int       @id @default(autoincrement())
  cod_activacion String
  usuarios       Usuario[]
}