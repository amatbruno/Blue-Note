generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("mysql://root:12345@host:3306/blue-note")
}

model codigoActivacion {
  id             Int      @id @default(autoincrement())
  activationCode String   @unique
  type           CODE_TYPE
  singer_rol     CODE_ROL?
  usesLeft       Int
}

enum CODE_TYPE {
  ADMIN
  DIRECTOR
  SINGER
  TEMP
}

enum CODE_ROL {
  SOPRANO
  ALTO
  TENOR
  BAJO
}

model User {
  id             Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String   @unique
  password       String
  type           CODE_TYPE
  role           CODE_ROL?
  color          String
  gender         String
  height         String
  birthDate      DateTime
  photo          Bytes?
}